<Window x:Class="w06p01_okna.okno01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w06p01_okna"
        mc:Ignorable="d"
        Title="okno01" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2">To jest okno dialogowe</TextBlock>
        <Button  IsDefault="True" Grid.Row="2" Click="Button_Click" >OK</Button>
        <Button IsCancel="True" Grid.Row="2" Grid.Column="1">Anuluj</Button>
        <TextBox x:Name="tekstBox01" Grid.Row="1" Grid.ColumnSpan="2" Margin="20"></TextBox>
    </Grid>
</Window>
