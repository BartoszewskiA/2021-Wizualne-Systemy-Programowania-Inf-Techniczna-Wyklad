<Window x:Class="testMenuContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testMenuContext"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Button x:Name="button01" Content="Przycisk testowy" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Padding="30,15">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="p1" Header="Menu - pozycja 01" Click="MenuItem_Click" />
                    <MenuItem x:Name="p2" Header="Menu - pozycja 02"  Click="MenuItem_Click"/>
                    <Separator />
                    <MenuItem Header="Menu - pozycja 03" />
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
   </Grid>
</Window>
