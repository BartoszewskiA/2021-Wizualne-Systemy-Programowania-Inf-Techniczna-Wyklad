<Window x:Class="w07p01_pliki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w07p01_pliki"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Padding="10,5" Click="Button_Click">Otwórz plik</Button>
            <Button Padding="10,5" Click="Button_Click_1"  >Zapisz plik</Button>
            <Separator/>
            <Button Padding="10,5" Click="Button_Click_2" >Zaszyfruj/odszyfruj plik</Button>
            <Button Padding="10,5" Click="Button_Click_3">pokaż wynik szyfrowania</Button>


        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" >
            <Label x:Name="label">Ścieżka</Label>
        </StatusBar>

        <TextBox x:Name="textBox01" Padding="5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
            
        </TextBox>

    </DockPanel>
</Window>
